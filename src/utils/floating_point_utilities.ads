--  This package provides utilities for floating point types.

generic
   type Real is digits <>;
package Floating_Point_Utilities is

   function Are_Equal (Left, Right : Real) return Boolean;

   function Is_Zero (Left : Real) return Boolean;

   function Truncated (Input : Real) return Integer;

   function Fractional_Part (Input : Real) return Real;

   function Image_of (Input : Real; Leading_Blank : Boolean := False) return String;

   function Fractional_Image (Input : Real; Length : Natural) return String;

   function Value_of (Input : String) return Real;

   Format_Error : exception;

   Unknown_Error : exception;

   pragma Inline (Truncated, Are_Equal, Is_Zero);

end Floating_Point_Utilities;
